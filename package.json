{
  "name": "hexo-client",
  "version": "1.0.0",
  "description": "Desktop app for hexo.",
  "main": "index.js",
  "scripts": {
    "start": "npm install && webpack --env development -w --config webpack/webpack.config.js",
    "client": "cross-env NODE_ENV=development electron .",
    "prepack": "cross-env NODE_ENV=production",
    "pack": "electron-packager ./ hexo-client --overwrite",
    "pack:win32": "npm run prepack && electron-packager ./ hexo-client --platform=win32 --overwrite",
    "pack:linux": "npm run prepack && electron-packager ./ hexo-client --platform=linux --overwrite",
    "pack:mas": "npm run prepack && electron-packager ./ hexo-client --platform=mas --overwrite",
    "pack:darwin": "npm run prepack && electron-packager ./ hexo-client --platform=darwin --overwrite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "hexo",
    "hexo-client",
    "electron"
  ],
  "author": "artisan",
  "license": "MIT",
  "dependencies": {
    "codemirror": "^5.26.0",
    "editor.md": "^1.5.0",
    "element-react": "^1.0.0",
    "element-theme-default": "^1.3.3",
    "events": "^1.1.1",
    "fs-jetpack": "^1.0.0",
    "glob": "^7.1.1",
    "hexo-cli": "^1.0.3",
    "jquery": "^3.2.1",
    "marked": "^0.3.6",
    "normalize.css": "^7.0.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router": "^3.0.5",
    "shelljs": "^0.7.8",
    "underscore": "^1.8.3",
    "uuid": "^3.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.1",
    "electron": "~1.6.2",
    "electron-packager": "^8.7.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.17.0",
    "url": "^0.11.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  }
}
